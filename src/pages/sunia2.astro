---
import Layout from '../layouts/Layout.astro';
import SuniaNotifications from '../components/SuniaNotifications.jsx';
import SuniaDeviceCards from '../components/SuniaDeviceCards.jsx';
---

<Layout title="SUNIA - Control IoT">
  <div class="p-8">
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-4">
        <div class="bg-gradient-to-r from-yellow-400 to-orange-500 p-4 rounded-full mr-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h1 class="text-4xl font-bold text-gray-800">SUNIA</h1>
      </div>
      <p class="text-xl text-gray-600 mb-2">¡SUNIA está contigo!</p>
      <p class="text-gray-500">Tu asistente de IA para el control inteligente del hogar</p>
    </div>
    
    <SuniaNotifications client:load />
    <SuniaDeviceCards client:load />
  </div>
</Layout>